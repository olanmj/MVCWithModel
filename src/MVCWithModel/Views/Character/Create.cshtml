@model MVCWithModel.Models.Character

<div class="form">
    <form asp-action="Create" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Role" class="form-control" autofocus />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Add Character</button>
            </div>
        </div>
        @*<input type="text" name="Name" value="" />
            <input type="submit" value="Add Character" />*@

    </form>
</div>